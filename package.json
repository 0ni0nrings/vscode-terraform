{
  "icon": "terraform.png",
  "name": "terraform",
  "displayName": "Terraform",
  "description": "A cool little plugin for editing Hashicorp's Terraform files",
  "version": "0.0.10",
  "publisher": "mauve",
  "engines": {
    "vscode": "^1.8.0"
  },
  "categories": [
    "Other",
    "Languages",
    "Formatters"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mauve/vscode-terraform.git"
  },
  "activationEvents": [
    "onLanguage:terraform",
    "onCommand:terraform.validate"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [{
      "command": "terraform.validate",
      "title": "Terraform: Validate"
    }],
    "languages": [{
      "id": "terraform",
      "aliases": [
        "Terraform",
        "terraform"
      ],
      "extensions": [
        ".tf",
        ".tfvars",
        ".hcl"
      ],
      "configuration": "./terraform.configuration.json"
    }],
    "grammars": [{
      "language": "terraform",
      "scopeName": "source.terraform",
      "path": "./syntaxes/terraform.tmLanguage"
    }],
    "configuration": {
      "type": "object",
      "title": "Terraform configuration",
      "properties": {
        "terraform.formatOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Run `terraform fmt` on save for .tf files."
        },
        "terraform.formatVarsOnSave": {
          "type": ["boolean", "null"],
          "default": null,
          "description": "Run `terraform fmt` on save for .tfvars files (if `null` this setting is equal to `terraform.formatOnSave`)."
        },
        "terraform.path": {
          "type": "string",
          "default": "terraform",
          "description": "Path to the `terraform` executable"
        },
        "terraform.templateDirectory": {
          "type": "string",
          "default": "templates",
          "description": "A relative path to where your templates are stored relative to the workspace root."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "mocha": "^2.3.3",
    "@types/node": "^6.0.40",
    "@types/mocha": "^2.2.32"
  }
}
